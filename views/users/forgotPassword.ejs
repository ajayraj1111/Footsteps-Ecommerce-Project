<section class="container shadow bg-light my-lg-4 mb-3 py-3 rounded" style="max-width: 380px; width: 100%">
  <div class="text-center text-dark my-5">
      <h3 class="py-2">FORGOT PASSWORD</h3>
  </div>

  <form action="/otp-forgotPass" method="post" name="otplogin" id="numform">

      <div class="form-group">
          <label for="mobile" class="form-label m-0"> Enter Your Registered Phone Number</label>
          <div class="input-group">
              <div class="input-group-prepend"><span class="input-group-text" id="mob-addon">+91</span></div>
              <input type="text" id="mobile" name="phone" class="form-control" aria-describedby="mob-addon">
          </div>
          <span class="text-danger d-none" style="font-size: 12px; margin-left: 10px;" id="mobError"></span>
      </div>

      <div class="d-flex justify-content-center my-3">
          <button class="btn shadow btn-info rounded-pill text-center px-5" type="submit"><strong>Send OTP</strong></button>
      </div>
  </form>

  <hr>

  <a href="/login" class="btn btn-info w-100 mb-3">Back to login</a>
  

</section>